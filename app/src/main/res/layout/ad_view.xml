<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ads_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/adsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >


            <!-- Scrollable view here -->


            <LinearLayout
                android:id="@+id/adHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginTop="35dip"
                android:layout_marginBottom="10dip"
                android:orientation="vertical"

                >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:onClick="openSideBar"
                    android:src="@drawable/ic_menu" />

                <TextView
                    android:id="@+id/adHeader"
                    android:layout_width="360dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="27dip"
                    android:layout_marginTop="-18dip"
                    android:text="AutoCAD programının"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="111dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ads_layout_round"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingBottom="56dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:id="@+id/adsScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="36dp"

                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dip"


                        app:cardCornerRadius="25dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/adViewText"

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/nunito_extralight"
                                android:padding="5dip"
                                android:text="İnternet və Yeni Texnologiyaların tədrisi mərkəzində AutoCAD programının tədrisiİnternet və Yeni Texnologiyaların tədrisi mərkəzində AutoCAD programının tədrisiİnternet və Yeni Texnologiyaların tədrisi mərkəzində AutoCAD programının tədrisi" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        
                        app:cardCornerRadius="2dip">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dip"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"

                                android:background="@drawable/img"
                                 />

                            <TextView
                                android:id="@+id/ownerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="13dp"
                                android:layout_weight="0.5"
                                android:text="Vahid Quluzadə"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/ownerMob"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="13dp"
                                android:layout_weight="0.3"
                                android:text="050 210 01 20"
                                android:textColor="#E203D8F4"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="143dp"
                        app:cardBackgroundColor="@android:color/white">

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav"

            />

    </RelativeLayout>
</LinearLayout>