<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdViewTest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ads_background"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/adsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >


                <!-- Scrollable view here -->


                <LinearLayout
                    android:id="@+id/adHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dip"
                    android:layout_marginTop="35dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="vertical"

                    >

                    <ImageButton
                        android:id="@+id/AdViewBackBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:onClick="OnBackPressed"
                        android:src="?attr/actionModeCloseDrawable" />
                    <TextView
                        android:id="@+id/AdViewHeader"
                        android:layout_width="360dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="27dip"
                        android:layout_marginTop="-24dip"
                        android:text="AutoCAD programının"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/headerImage"
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ads_layout_round"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingBottom="56dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <LinearLayout
                        android:id="@+id/adsScroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="36dp"

                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"


                            >


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/adViewText"

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/nunito_extralight"
                                    android:padding="5dip"
                                    android:text="İnternet və Yeni Texnologiyaların tədrisi mərkəzində AutoCAD programının tədrisiİnternet və Yeni Texnologiyaların tədrisi mərkəzində AutoCAD programının tədrisiİnternet və Yeni Texnologiyaların tədrisi mərkəzində AutoCAD programının tədrisi"
                                    android:textSize="18sp"
                                    android:textStyle="normal"
                                    android:textColor="@android:color/black"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@android:color/darker_gray" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"

                            app:cardCornerRadius="2dip">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dip"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="37dp"
                                    android:layout_marginTop="5dip"

                                    android:layout_weight="0.2"
                                    android:background="@drawable/img" />

                                <TextView
                                    android:id="@+id/ownerName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="13dp"
                                    android:layout_weight="0.5"
                                    android:text="Vahid Quluzadə"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/ownerMob"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="13dp"
                                    android:layout_weight="0.3"
                                    android:text="050 210 01 20"
                                    android:textColor="#E203D8F4"
                                    android:textSize="18sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@android:color/darker_gray" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            app:cardBackgroundColor="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dip"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.2"
                                        app:srcCompat="@android:drawable/btn_dialog" />

                                    <TextView
                                        android:id="@+id/AdType"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.8"
                                        android:text="Reklam tipi:" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.2"
                                        app:srcCompat="@android:drawable/btn_dialog" />

                                    <TextView
                                        android:id="@+id/AdProfit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.8"
                                        android:text="Qazanc:" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView6"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.2"
                                        app:srcCompat="@android:drawable/btn_dialog" />

                                    <TextView
                                        android:id="@+id/AdBalans"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.8"
                                        android:text="Balans:" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                </LinearLayout>

                                <Button
                                    android:id="@+id/button"
                                    android:layout_width="150dip"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:layout_marginTop="30dp"
                                    android:background="@drawable/btncorner"
                                    android:text="Reklamı izlə"
                                    android:textColor="@android:color/white" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <com.google.android.material.bottomnavigation.BottomNavigationView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/bottom_nav"

                />

        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>