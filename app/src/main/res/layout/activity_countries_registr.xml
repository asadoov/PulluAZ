<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountriesRegistrActivity"
    android:orientation="vertical">



    <ImageView

        android:id="@+id/imageView"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        app:srcCompat="@drawable/svg" />


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/nunito_extralight"
        android:gravity="center"
        android:text="Qeydiyyat"
        android:textColor="#454555"
        android:textSize="32dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:gravity="center"

        android:text="Qeydiyyatdan keç və pul qazan"
        android:textColor="#454555" />


    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Olkeni secin"
        android:textColor="#454555"
        android:gravity="center"
        android:textSize="22dp">
    </TextView>

    <Spinner
        android:id="@+id/spinnerCountry"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="42dp">

    </Spinner>
    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seheri secin"
        android:textColor="#454555"
        android:gravity="center"
        android:textSize="22dp">
    </TextView>

    <Spinner
        android:id="@+id/spinnerCity"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="42dp">

    </Spinner>
    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sectoru secin"
        android:textColor="#454555"
        android:gravity="center"
        android:textSize="22dp">
    </TextView>

    <Spinner
        android:id="@+id/sector"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="42dp">

    </Spinner>

    <Button
        android:id="@+id/btnEndReg"
        android:onClick="EndReg"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/nunito_extralight"
        android:text="irəli"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textFontWeight="400"
        android:textSize="22dp" />

</LinearLayout>