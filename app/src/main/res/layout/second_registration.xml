<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dip"
        android:orientation="vertical"
        android:paddingTop="2dp"
        tools:context=".RegActivity">


        <ImageView

            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_margin="0dip"
            app:srcCompat="@drawable/svg" />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-8dp"
            android:fontFamily="@font/nunito_extralight"
            android:gravity="center"
            android:text="Qeydiyyat"
            android:textColor="#454555"
            android:textSize="32dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-7dp"
            android:gravity="center"
            android:text="Qeydiyyatdan keç və pul qazan"
            android:textColor="#454555" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:layout_marginTop="17dip"
            android:text="Ad"
            android:textColor="#454555"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="John"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:layout_marginTop="20dip"
            android:text="Soyad"
            android:textColor="#454555"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText

            android:id="@+id/edPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Appleseed" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:layout_marginTop="12dp"
            android:text="Mobil telefon"
            android:textColor="#454555"
            android:textSize="16dip"
            android:textStyle="bold" />

        <EditText

            android:id="@+id/edPass2"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="+994" />


        <TextView
            android:id="@+id/date"
            android:layout_marginTop="15dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_marginStart="3dp"
            android:textColor="#454555"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Dogum tarixi">

        </TextView>

        <DatePicker
            android:layout_width="162dp"
            android:layout_height="115dp"
            android:calendarViewShown="false"
            android:layout_marginStart="105dp"
            android:id="@+id/datePicker"
            style="@style/MyDatePickerStyle"
            android:theme="@style/MyDatePickerSpinnerStyle"

            android:datePickerMode="spinner">

        </DatePicker>

        <Button
            android:id="@+id/btnNext"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:layout_marginTop="80dip"
            android:background="@drawable/round_button"
            android:fontFamily="@font/nunito_extralight"
            android:text="irəli"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textFontWeight="400"
            android:textSize="22dp" />


    </LinearLayout>
</ScrollView>