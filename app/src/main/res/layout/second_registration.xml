<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <RelativeLayout
        android:id="@+id/releative"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="2dp">


        <ImageView

            android:id="@+id/imageView"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            app:srcCompat="@drawable/svg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="125dp"
        android:fontFamily="@font/nunito_extralight"
        android:gravity="center"
        android:text="Qeydiyyat"
        android:textColor="#454555"
        android:textSize="32dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="170dp"
        android:gravity="center"

        android:text="Qeydiyyatdan keç və pul qazan"
        android:textColor="#454555" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="240dip"
        android:text="Ad"
        android:layout_marginStart="15dp"
        android:textColor="#454555"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="250dp"
        android:hint="John"
        android:layout_marginStart="15dp"
        android:inputType="textEmailAddress" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="290dip"
        android:text="Soyad"
        android:textColor="#454555"
        android:layout_marginStart="15dp"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText

        android:id="@+id/edLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginStart="15dp"
        android:layout_marginTop="305dp"
        android:hint="Appleseed" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="350dp"
        android:text="Mobil telefon"
        android:textColor="#454555"
        android:textSize="16dip"
        android:textStyle="bold" />

    <EditText

        android:id="@+id/edPhone"
        android:layout_marginTop="370dp"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:hint="+994" />


    <TextView
        android:id="@+id/date"

        android:layout_marginTop="425dp"
        android:textSize="17dp"
        android:textStyle="bold"
        android:clickable="true"
        android:layout_marginStart="15dp"
        android:textColor="#454555"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Dogum tarixi">

    </TextView>

    <DatePicker
        android:id="@+id/datePicker"
        style="@style/MyDatePickerStyle"
        android:layout_width="298dp"
        android:layout_height="150dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="450dp"
        android:endYear="2017"
        android:minDate="1935"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:theme="@style/MyDatePickerSpinnerStyle">

    </DatePicker>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@+id/datePicker"
            android:text="Cins"
            android:textSize="18dip"
            android:textColor="#454555"
            android:textStyle="bold">

        </TextView>


        <Spinner
            android:id="@+id/spinner"
            android:layout_below="@+id/datePicker"
            android:layout_width="140dp"
            android:layout_marginTop="29dp"
            android:textAlignment="center"
            android:layout_marginStart="124dp"
            android:layout_height="60dp"></Spinner>


    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="728dip"
        android:layout_marginEnd="30dp"
        android:onClick="btnNext"
        android:background="@drawable/round_button"
        android:fontFamily="@font/nunito_extralight"
        android:text="irəli"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textFontWeight="400"
        android:textSize="22dp" />

    </RelativeLayout>
    </ScrollView>

